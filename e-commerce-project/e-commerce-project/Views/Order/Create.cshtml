@model e_commerce_project.Models.Order

<h1>Create Order</h1>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="ProductId">Product ID</label>
        <input asp-for="ProductId" type="number" />
    </div>
    <div>
        <label asp-for="customerName">Customer name</label>
        <input asp-for="customerName" type="text" />
    </div>
    <div>
        <label asp-for="customerAddress">Shipping address</label>
        <input asp-for="customerAddress" type="text" />
    </div>

    <button type="submit">Create Order</button>
</form>

<h2>Existing Orders</h2>

<h2>Existing Orders</h2>

@{
    var orders = ViewBag.Orders as List<e_commerce_project.Models.Order>;
}

@if (orders != null)
{
    <ul>
        @foreach (var order in orders)
        {
            <li>Order ID: @order.Id, Customer Name: @order.customerName, Shipping Address: @order.customerAddress</li>
        }
    </ul>
}



