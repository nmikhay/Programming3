<Window x:Class="BookstoreInventory.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Book" Height="300" Width="400">
    <Grid>
        <Label Content="Add Book" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
        <!-- UI elements for adding a new book -->
        <StackPanel Margin="20">
            <TextBlock Text="Title:"/>
            <TextBox x:Name="TitleTextBox" Width="200" Margin="0 5"/>

            <TextBlock Text="Author:"/>
            <TextBox x:Name="AuthorTextBox" Width="200" Margin="0 5"/>

            <TextBlock Text="Publication Year:"/>
            <TextBox x:Name="PublicationYearTextBox" Width="200" Margin="0 5"/>

            <TextBlock Text="Genre:"/>
            <TextBox x:Name="GenreTextBox" Width="200" Margin="0 5"/>

            <TextBlock Text="Quantity in Stock:"/>
            <TextBox x:Name="QuantityTextBox" Width="200" Margin="0 5"/>

            <Button Content="Save" Width="100" HorizontalAlignment="Center" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>



