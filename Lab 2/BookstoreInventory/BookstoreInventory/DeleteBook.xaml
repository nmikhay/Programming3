<Window x:Class="BookstoreInventoryManagementSystem.DeleteBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Book" Height="448" Width="797">
    <Grid>
        <Label Content="Delete Book" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>

        <!-- UI elements for confirming the deletion of a book -->
        <StackPanel Margin="20">
            <TextBlock Text="Are you sure you want to delete this book?" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Delete" Width="100" Margin="0,0,10,0" Click="DeleteButton_Click"/>
                <Button Content="Cancel" Width="100" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>



