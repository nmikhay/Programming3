@model BookShop.Models.Book

<h2>Delete Book - @Model.Title</h2>

<h4>Are you sure you want to delete this book?</h4>
<div>
    <h4>Title:</h4>
    <p>@Model.Title</p>
</div>
<div>
    <h4>Author:</h4>
    <p>@Model.Author</p>
</div>
<div>
    <h4>Price:</h4>
    <p>@Model.Price</p>
</div>
<div>
    <h4>ISBN:</h4>
    <p>@Model.ISBN</p>
</div>
<div>
    <h4>Synopsis:</h4>
    <p>@Model.Synopsis</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

