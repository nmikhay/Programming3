@page "{id}"
@model IndexModel
@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<p>Are you sure you want to delete this book?</p>

<div>
    <h4>@Model.Book.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Book.Author</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Book.Price</dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="./Index">Back to List</a>
    </form>
</div>

